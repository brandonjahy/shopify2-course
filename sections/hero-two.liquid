{{ 'component-image-with-text.css' | asset_url | stylesheet_tag }}

<div class="hero hero2">
  <div class="hero2__collection1">
    {%- if section.settings.image1 != blank -%}
    <img src="{%- if section.settings.image_behavior == 'ambient' or section.settings.image_behavior == 'zoom-in' -%}
            {%- assign widths = '198, 432, 642, 900, 1284, 1800' -%}
            {%- capture sizes -%}
          (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 1.6667 }}px,
          (min-width: 750px) calc((100vw - 130px) / 1.667), calc((100vw - 50px) / 1.667)
        {%- endcapture -%}
          {%- else -%}
            {%- assign widths = '165, 360, 535, 750, 1070, 1500' -%}
            {%- capture sizes -%}
          (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
          (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
        {%- endcapture -%}
          {%- endif -%}
          {{
            section.settings.image1
            | image_url: width: 1200
            | image_tag: sizes: sizes, widths: widths, fetchpriority: fetch_priority
          }}" class="hero2__bg">
    
    {%- else -%}
    {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
    {%- endif -%}
    {%  assign opacity1 = section.settings.opacity1 | divided_by: 100.00  %} 
    <div class="hero2__content-container" style=" background-color: {{ section.settings.background1 |  color_modify: 'alpha', opacity1 }}">
      {%- if section.settings.button_label1 != blank -%}
        <a href="{{ section.settings.button_link1 }}" class="hero2__button" {{ section.shopify_attributes }}>{{ section.settings.button_label1 | escape }}</a>
     {%- endif -%}
    </div>
  </div>
  <div class="hero2__collection2">
    {%- if section.settings.image2 != blank -%}
      <img src="{%- if section.settings.image_behavior == 'ambient' or section.settings.image_behavior == 'zoom-in' -%}
              {%- assign widths = '198, 432, 642, 900, 1284, 1800' -%}
              {%- capture sizes -%}
            (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 1.6667 }}px,
            (min-width: 750px) calc((100vw - 130px) / 1.667), calc((100vw - 50px) / 1.667)
          {%- endcapture -%}
            {%- else -%}
              {%- assign widths = '165, 360, 535, 750, 1070, 1500' -%}
              {%- capture sizes -%}
            (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
            (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
          {%- endcapture -%}
            {%- endif -%}
            {{
              section.settings.image2
              | image_url: width: 1200
              | image_tag: sizes: sizes, widths: widths, fetchpriority: fetch_priority
            }}" class="hero2__bg">
      
      {%- else -%}
      {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
      {%- endif -%}
      {%  assign opacity2 = section.settings.opacity2 | divided_by: 100.00  %} 
      <div class="hero2__content-container" style=" background-color: {{ section.settings.background2 |  color_modify: 'alpha', opacity2 }}">
      {%- if section.settings.button_label2 != blank -%}
        <a href="{{ section.settings.button_link2 }}" class="hero2__button" {{ section.shopify_attributes }}>{{ section.settings.button_label2 | escape }}</a>
     {%- endif -%}
    </div>
  </div>
</div>




{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{% schema %}
{
  "name": "Hero Two",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "image1",
      "label": "t:sections.image-with-text.settings.image.label"
    },
    {
        "type": "color",
        "id": "background1",
        "label": "BackGround",
        "default": "rgba(0,0,0,0.5)"
    },
    {
        "type": "range",
        "id": "opacity1",
        "min": 0,
        "max": 100,
        "step": 1,
        "label": "opacity",
        "default": 50
    },
    {
        "type": "url",
        "id": "button_link1",
        "label": "Link"
    },
    {
          "type": "text",
          "id": "button_label1",
          "default": "t:sections.image-with-text.blocks.button.settings.button_label.default",
          "label": "t:sections.image-with-text.blocks.button.settings.button_label.label",
          "info": "t:sections.image-with-text.blocks.button.settings.button_label.info"
        },
        {
      "type": "image_picker",
      "id": "image2",
      "label": "t:sections.image-with-text.settings.image.label"
    },
    {
        "type": "color",
        "id": "background2",
        "label": "BackGround",
        "default": "rgba(0,0,0,0.5)"
    },
    {
        "type": "range",
        "id": "opacity2",
        "min": 0,
        "max": 100,
        "step": 1,
        "label": "opacity",
        "default": 50
    },
    {
        "type": "url",
        "id": "button_link2",
        "label": "Link"
    },
    {
          "type": "text",
          "id": "button_label2",
          "default": "t:sections.image-with-text.blocks.button.settings.button_label.default",
          "label": "t:sections.image-with-text.blocks.button.settings.button_label.label",
          "info": "t:sections.image-with-text.blocks.button.settings.button_label.info"
        }
  ],
  "presets": [
    {
      "name": "Hero Two"
      
    }
  ]
}
{% endschema %}
